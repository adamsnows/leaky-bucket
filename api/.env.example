# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/leaky-bucket
# For Docker use: MONGODB_URI=mongodb://mongodb:27017/leaky-bucket

# Authentication Configuration
JWT_SECRET=your_secret_key_here
JWT_EXPIRES_IN=1d

# Leaky Bucket Rate Limiting Configuration
BUCKET_CAPACITY=10      # Maximum number of tokens in the bucket
LEAK_RATE=1             # Tokens leaked per time unit
REFILL_RATE=1           # Tokens refilled per time unit